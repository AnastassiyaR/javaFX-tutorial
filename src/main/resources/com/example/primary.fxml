<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    FXML (FX Markup Language) file defining the UI layout for a JavaFX application.
    This uses an XML-based format to describe the user interface components.
-->

<!-- Import JavaFX classes that will be used in this FXML file -->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<!-- 
    Root container: Vertical Box (VBox) layout
    - alignment="CENTER": Centers children horizontally
    - spacing="20.0": Vertical space between child elements
    - xmlns: Standard JavaFX 8 namespace declarations
    - fx:controller: Links this view to its controller class
-->
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController"
      styleClass="root-vbox" stylesheets="@styles.css">

   <!-- Children elements contained within the VBox -->
   <children>
      <!-- 
          Label component displaying text 
          - text="Primary View": The text to display
      -->
      <Label text="Primary Viewsssss" styleClass="title-label" />
      
      <!-- 
          Button component 
          - fx:id="primaryButton": Identifier used to reference this button in the controller
          - text="Switch to Secondary View": Text displayed on the button
          - onAction="#switchToSecondary": Method to call when button is clicked
      -->
      <Button fx:id="primaryButton" text="Switch to Secondary View" onAction="#switchToSecondary" 
              styleClass="modern-button" />
   </children>
   
   <!-- 
       Padding around the edges of the VBox 
       - Insets define space around the content (20px on all sides)
   -->
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>